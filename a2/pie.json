{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Confirmed By Contient",
  "data": {
    "url": "https://raw.githubusercontent.com/yliu0354/3179/main/a2/covid.csv"  
  },
  "transform": [
    {
      "aggregate": [{"op": "sum", "field": "confirmed", "as": "totalConfirmedByContinent"}],
      "groupby": ["continent"]
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "totalConfirmedByContinent",
      "type": "quantitative",
      "title": "Total Confirmed Cases"
    },
    "color": {
      "field": "continent",
      "type": "nominal",
      "title": "Continent"
    },
    "tooltip": [
      { "field": "continent", "type": "nominal", "title": "Continent" },
      { "field": "totalConfirmedByContinent", "type": "quantitative", "title": "Total Confirmed Cases" }
    ]
  }
}





